<configure xmlns="http://pylonshq.com/pyramid">

  <include package="pyramid_zcml"/>

  <view
    context=".interfaces.IApplication"
    name="favicon.ico"
    view=".app.favicon"
    />

  <view
    context=".interfaces.IApplication"
    name="robots.txt"
    view=".app.robots"
    />

  <view
    context=".interfaces.IApplication"
    view=".app.hello_world"
    renderer="templates/hello_world.pt"
    />

  <static name="css" path="css"/>
  <static name="images" path="images"/>

</configure>